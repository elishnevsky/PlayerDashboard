<span>
    @PlaytimeFormatted
</span>

@code {
    // Total playtime in minutes.
    [Parameter]
    public int TotalMinutes { get; set; }

    // Formats the total playtime for display.
    private string PlaytimeFormatted => FormatDuration(TotalMinutes);

    public string FormatDuration(int durationInMinutes)
    {
        int days = durationInMinutes / (24 * 60); // Calculate the number of full days
        int hours = (durationInMinutes % (24 * 60)) / 60; // Calculate the remaining hours
        int minutes = durationInMinutes % 60; // Calculate the remaining minutes

        // Build the result string
        var result = new List<string>();

        if (days > 0) result.Add($"{days} day{(days > 1 ? "s" : "")}");
        if (hours > 0) result.Add($"{hours} hour{(hours > 1 ? "s" : "")}");
        if (minutes > 0) result.Add($"{minutes} minute{(minutes > 1 ? "s" : "")}");

        return string.Join(" ", result);
    }
}
