@* General panel for consistent style *@

<section class="bg-white border border-gray-300 rounded-xl shadow-md p-6 @(Class)" @onclick:stopPropagation="true">
    <h2 class="text-3xl">
        @Title
    </h2>
    <div class="mt-6">
        @ChildContent
    </div>
</section>

@code {
    [Parameter]
    public string Title { get; set; } = String.Empty;

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public string Class { get; set; } = String.Empty;
}
