<Panel Title="Player Stats">
    @if (Player != null)
    {
        <div class="flex items-center">
            <div>
                <Trophy class="size-10 text-amber-500" />
            </div>
            <div class="flex flex-col ml-4">
                <div class="text-gray-500 text-sm">Total Games</div>
                <div class="font-bold text-2xl">@Player?.TotalGames</div>
            </div>
        </div>

        <div class="flex items-center mt-4">
            <div>
                <Star class="size-10 text-green-500" />
            </div>
            <div class="flex flex-col ml-4">
                <div class="text-gray-500 text-sm">Win Rate</div>
                <div class="font-bold text-2xl">@Player?.WinRate</div>
            </div>
        </div>

        <div class="flex items-center mt-4">
            <div>
                <Clock class="size-10 text-blue-500" />
            </div>
            <div class="flex flex-col ml-4">
                <div class="text-gray-500 text-sm">Avg Game Time</div>
                <div class="font-bold text-2xl">@(Player?.AverageGameTimeMinutes) minutes</div>
            </div>
        </div>
    }
    else
    {
        <Spinner />
    }
</Panel>

@code {
    [Parameter]
    public PlayerDto? Player { get; set; }
}
