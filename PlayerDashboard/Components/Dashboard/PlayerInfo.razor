@if (Player != null)
{
    <div>
        <h1 class="text-3xl font-bold">
            @Player.DisplayName<span>'s Profile</span>
        </h1>
        <div class="mt-3 text-xl text-gray-800">
            Level: @Player.Level
        </div>
    </div>
}

@code {
    [Parameter]
    public PlayerDto? Player { get; set; }
}
