@inject PlayerDashboard.Data.IPlayerRepository PlayerRepository
@rendermode InteractiveServer

<PlayerInfo Player="@_player" />

<div class="mt-6 grid grid-cols-3 gap-6">
    <div class="space-y-6">
        <AccountDetails Player="@_player" />
        <PlayerStats Player="@_player" />
    </div>
    <div class="col-span-2">
        <GameSessionList />
    </div>
</div>

@code {
    [CascadingParameter(Name = "PlayerId")]
    public int PlayerId { get; set; }

    private PlayerDto? _player;

    protected override async Task OnInitializedAsync()
    {
        _player = await PlayerRepository.GetPlayerByIdAsync(PlayerId);
    }
}